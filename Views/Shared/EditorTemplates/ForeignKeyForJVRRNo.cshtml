@model object

@(
Html.Kendo().ComboBoxFor(m => m)
    .Placeholder("RR No")
    .DataTextField("Rrnumber")
    .DataValueField("Id")
    .HtmlAttributes(new { style = "width:100%;" })
    .Filter(FilterType.Contains)
    .AutoBind(true)
    .MinLength(3)
    .Template("<span style='width: 150px;'>#: data.Rrnumber#</span><span style='width: 100px;'>#: kendo.format(\"{0:MM/dd/yyyy}\", kendo.parseDate(data.Rrdate))#</span></span><span style='width: 100px; text-align: end;'>#:  kendo.format(\"{0:n2}\", kendo.parseFloat(data.BalanceAmount))#</span>")
    .DataSource(source =>
    {
        source.Read(read =>
        {
            read.Action("LineRRNos", "TrnJournalVoucher");
        })
        .ServerFiltering(false);
    })
)

<script>
    var widthVal = "360";

    $("#Aprrid_listbox").css("width", widthVal);
    $("#Aprrid_listbox").parents("div").css("width", widthVal);
</script>