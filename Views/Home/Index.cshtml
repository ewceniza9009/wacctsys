                c.Add().Header(h => h.Text("Tasks")).BodyTemplateId("tasks").ColSpan(2).RowSpan(1);
            })
            .Reorderable()
            .Resizable()
            .Events(e=>e.Resize("onTileResize"))
        )
    }
