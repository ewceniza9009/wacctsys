                    success: function (data) {
                        $("<h3>₱" + numberWithCommas(data) + "</h3>").appendTo("#TotalSales")
                    }
                });
            }

            function numberWithCommas(x) {
                var parts = x.toString().split(".");
                parts[0] = parts[0].replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                return parts.join(".");
            }
        </script>

